%main.govuk-main-wrapper#main-content{role: 'main'}
  .govuk-grid-row
    .govuk-grid-column-two-thirds
      %h1 Home Page
      - if user_signed_in?
        %h2
          = "Welcome back #{current_user.email}"
        %li
          = link_to('Logout', destroy_user_session_path, method: :delete)
      - else
        %li
          = link_to('Login', new_user_session_path)
